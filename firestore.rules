rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Focus Plans collection
    match /focusPlans/{planId} {
      // Users can read their own plans
      allow read: if isOwner(resource.data.userId);
      
      // Users can create plans for themselves
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Users can update their own plans
      allow update: if isOwner(resource.data.userId);
      
      // Users can delete their own plans
      allow delete: if isOwner(resource.data.userId);
      
      // Focus Days subcollection
      match /days/{dayId} {
        // Users can read days from their own plans
        allow read: if isOwner(resource.data.userId);
        
        // Users can create days for their own plans
        allow create: if isAuthenticated() && 
                         request.resource.data.userId == request.auth.uid &&
                         request.resource.data.planId == planId;
        
        // Users can update days in their own plans
        allow update: if isOwner(resource.data.userId);
        
        // Users can delete days from their own plans
        allow delete: if isOwner(resource.data.userId);
        
        // Session Logs subcollection
        match /sessionLogs/{sessionId} {
          // Users can read their own session logs
          allow read: if isOwner(resource.data.userId);
          
          // Users can create session logs for their own work
          allow create: if isAuthenticated() && 
                           request.resource.data.userId == request.auth.uid &&
                           request.resource.data.planId == planId &&
                           request.resource.data.dayId == dayId;
          
          // Users can update their own session logs
          allow update: if isOwner(resource.data.userId);
          
          // Users can delete their own session logs
          allow delete: if isOwner(resource.data.userId);
        }
      }
    }
  }
}

